# OpenAI API Key for text manipulation (optional)
OPENAI_API_KEY=your_openai_api_key_here

# Database connection string for production (optional)
DATABASE_URL=your_database_connection_string_here

# Upstash Redis for ephemeral storage (REQUIRED for production)
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token_here

# Node environment
NODE_ENV=production

# Frontend Configuration
# API URL for frontend to connect to backend
# In development, this defaults to '/api' for relative calls
# In production, this should be set to your domain or left as '/api' for same-domain deployment
VITE_PUBLIC_API_URL=/api

# Supabase Integration (alternative to Vercel deployment)
# Set to 'true' to enable Supabase Edge Functions instead of Vercel API
VITE_USE_SUPABASE=false
VITE_SUPABASE_PROJECT_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_API_KEY=your_supabase_anon_key